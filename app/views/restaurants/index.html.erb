<h1>All Restaurants:</h1>

<form action="/restaurants" method="get">
  <input type="text" name="category" placeholder="What kind of food?">
  <input type="submit">
</form>


<ul>
  <% @restaurants.each do |id, restaurant| %>
    <li>
      <%= link_to restaurant[:name], restaurant_path(id) %>
      (<%= restaurant[:address] %>)
    </li>
  <% end %>

  <%= @name %>

</ul>
